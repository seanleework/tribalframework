package com.tribalframework.utils.ordinal{	import flash.display.*;	import flash.events.*;		public class Ordinal extends Sprite	{		private var end;		public function Ordinal (){								}				public function ordinalise(number):String {			var tmp:String = String(number);			if (tmp.substr(-2, 2) != "13" && tmp.substr(-2, 2) != "12" && tmp.substr(-2, 2) != "11") {		 		if (tmp.substr(-1, 1) == "1") {		  			end = "st";		  		} else if (tmp.substr(-1, 1) == "2") {		   			end = "nd";		  		} else if (tmp.substr(-1, 1) == "3") {		   			end = "rd";		  		} else {					end = "th";				}		 	}		 //	if (!end) {		 // 	end = "th";		 //	}		 	return tmp+end;		}	}}