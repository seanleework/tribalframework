/*** ** Decimal** com.tribalframework.utils.decimal.Decimal;** @ver 1.0** @date 22-07-2010***************************************/package com.tribalframework.utils.decimal{	import flash.display.*;	import flash.events.*; 		public class Decimal	{		private var _num:Number;		private var _rounded:Number;		private var _roundedStr:String;				private var _newNum:String;				public function Decimal(){				}						// round up		// round down		//  		// show .0 (number of dec places)		public function initDecimal(num:Number, adjust:Number = 10, decPlaces:Number = 10, p:String="floor" ):String{			_num = num;						if(p == "round"){			// _rounded = Math.round((_num * adjust) * decPlaces) / decPlaces;				_rounded = Math.round((_num * adjust)) / decPlaces; 			}else if(p == "floor"){				_rounded = Math.floor((_num * adjust)) / decPlaces; 			}else if(p == "ceil"){				_rounded = Math.ceil((_num * adjust)) / decPlaces; 			}									_roundedStr = _rounded.toString();						var decPos = _roundedStr.indexOf(".");			var zeroDec;						if(decPos == -1){				_roundedStr += ".0";			}			else{				_roundedStr += "";			}						_newNum = _roundedStr;						return _newNum;		}				public function tofixed(num2:Number, pos:Number):Number{			var lie = Math.round(num2*pos)/pos;		//	trace( num2.toFixed(pos) );		//	trace( num2.toPrecision(pos) );						return lie;		}			}	}