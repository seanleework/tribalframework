package com.tribalframework.utils.cachebuster{    public class CacheBuster    {//- PRIVATE & PROTECTED VARIABLES -------------------------------------------------------------------------//- PUBLIC & INTERNAL VARIABLES ---------------------------------------------------------------------------        public static const DEFAULT_NAME:String = "com.tribalframework.utils.CacheBuster";//- CONSTRUCTOR -------------------------------------------------------------------------------------------        public function CacheBuster()        {			        }//- PRIVATE & PROTECTED METHODS ---------------------------------------------------------------------------//- PUBLIC & INTERNAL METHODS -----------------------------------------------------------------------------        /**         * Cache-busts and returns a single URL.         *         * @usage <pre><code>CacheBuster.bust("link.html");</code></pre>         *         * @param $url A string value of the URL to bust.         *         * @return String         */        public static function bust($url:String):String        {            if ($url.indexOf("?") == -1)            {                $url += "?v=" + new Date().getTime();            }            else            {                $url += "&v=" + new Date().getTime();            }                return $url;        }        /**         * Cache-busts and returns an array of URLs.         *         * @usage <pre><code>CacheBuster.bustArray(links);</code></pre>         *         * @param $arr An array that holds the string values of the URLs to bust.         *         * @return Array         */        public static function bustArray($arr:Array):Array        {            for (var i in $arr) $arr[i] += "?v=" + new Date().getTime();               return $arr;        }        public function toString():String        {            return "com.tribalframework.utils.CacheBuster";        }		    }}