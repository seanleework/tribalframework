/*** ** Find and Replace String** com.tribalframework.utils.replace.ReplaceString** @ver 1.0** @date 10-11-2010***************************************/package com.tribalframework.utils.replace{	public class ReplaceString	{				public function ReplaceString(){					}				// adapted from http://www.smithmediafusion.com/blog/?p=343		static public function replaceString(str:String, find:String, replace:String):String {			var startIndex:Number = 0;			var oldIndex:Number = 0;			var newString:String = "";						while ((startIndex = str.indexOf(find, startIndex)) != -1) {				newString += str.substring(oldIndex, startIndex) + replace;				oldIndex = startIndex += find.length;			}						return((newString == "") ? str : newString);		}				// USE THIS - ReplaceString.replaceText( "your copy" );		// finds and replaces http:// URLs so that the links are clickable within a dynamic textfield		static public function replaceText(t){			var temp = t;				temp = temp.replace("<","&lt;");			temp = temp.replace(">","&gt;");						var temp2 = temp.split(" ");						var link = "";						for(var i = 0; i < temp2.length; i++){				if(link != ""){					link += " ";				}				link += checkURL(temp2[i]);			}						return link;					}				static private function checkURL(tempStr){			var result = tempStr;			var tempStr;			if(String(tempStr).indexOf("http") != -1){				tempStr = String(result).split("http");								result = "";				if(tempStr.length > 1){					result = tempStr[0] + "<a href='http" + tempStr[1] + "' target='_blank'>http" + tempStr[1] + "</a>";				}else{					result = "<a href='http" + tempStr[0] + "'>http" + tempStr[0] + "</a>";				}			}			return result;		}			}}