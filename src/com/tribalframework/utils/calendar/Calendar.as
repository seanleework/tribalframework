package com.tribalframework.utils.calendar{    public class Calendar    {        private var day;        private var mth;         private var yr;        private var bigMth = [01, 03, 05, 07, 08, 10, 12];  // mths with 31st        private var smallMth = [02, 04, 06, 09, 11];        // mths with 30th        /*        ** Constructor        ** @param tempStr "11/12/2012"        ** how to use:        ** var abc = new Calendar("dd/mm/yyyy");        ** abc.validate();        ******************************************/        public function Calendar(tempStr){            var temp = tempStr;            var pp = temp.split("/").join("");            if(pp.length != 8){                trace("error");            }else{                day = pp.substring( 0, 2 );                mth = pp.substring( 2, 4 );                yr = pp.substring( 4, pp.length );                }        }        public function validate():Boolean{            var t;            // check feb            if(mth == 02 && day > 29){                t = false;            // check leap year                }else if(mth == 02 && day > 28){                t = false;            // check leap years             }else if(yr % 4 != 0 || yr % 400 != 0 || yr % 100 != 0){                t = false;            // check mth with 31st               }else if(smallMth.indexOf(mth) != -1 && day > 30){                t = false;               }else if(mth > 12 || mth < 01 || day > 31 || day < 01){                t = false;            }             else{                t = true;            }            return t;        }                   }}