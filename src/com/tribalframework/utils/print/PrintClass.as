/*** ** basic print class** com.tribalframework.utils.print.PrintClass** @ver 1.0** @date 09-07-2010***************************************/package com.tribalframework.utils.print{	import flash.events.*;	import flash.display.*;	import flash.printing.*;		public class PrintClass	{		private static var _obj:Object;		private static var pjob:PrintJob;		private static var pjo:PrintJobOptions;				public function PrintClass(){				}				/* Print		** start printing		** obj = displayobject / movieclip etc that is to be printed 		** example: PrintClass.initPrint( mcName );		******************************************/		public static function initPrint(obj:Object){			pjob = new PrintJob();						pjo = new PrintJobOptions();			pjo.printAsBitmap = false;						var spr = Sprite(obj);						pjob.start();			pjob.addPage(spr,null,pjo);			pjob.send();					}					}}