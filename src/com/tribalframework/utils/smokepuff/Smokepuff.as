package com.tribalframework.utils.smokepuff{		import flash.display.*;	import flash.events.*;		public class Smokepuff extends MovieClip	{		private var vx;		private var vy;		public function Smokepuff(){			vx = Math.random() - Math.random();			vy = Math.random() * 3 - 5;			alpha = Math.random();			scaleX = scaleY = Math.random();			addEventListener(Event.ENTER_FRAME, onFrame);		}		private function onFrame(e:Event){			alpha -= 0.01;			y += vy;			x += vx;			scaleX = scaleY += 0.02;						if(alpha <= 0){				killSmoke();			}		}		private function killSmoke(){			removeEventListener(Event.ENTER_FRAME, onFrame);			parent.removeChild(this);		}			}}