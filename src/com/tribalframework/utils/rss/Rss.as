/*** ** RSS Viewer** com.tribalframework.utils.rss.Rss** @ver 1.0** @date 02-07-2010***************************************/package com.tribalframework.utils.rss{	import flash.events.*;	import flash.net.*;	import flash.display.*;	import com.greensock.*;		public class Rss extends MovieClip	{		private static var _link:String;		private static var _linkLoader:URLLoader;		private static var _xml:XML;				public function Rss(){				}				public static function initRss(link:String){			_link = link;			_linkLoader = new URLLoader();			_linkLoader.load(new URLRequest(_link));			_linkLoader.addEventListener(Event.COMPLETE, linkLoaded);					}				public static function linkLoaded(e:Event=null){			_xml = XML(e.target.data);			trace(_xml.channel.item);					}			}}			